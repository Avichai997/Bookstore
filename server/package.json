{
  "name": "final-project-server",
  "version": "0.0.1",
  "main": "server.ts",
  "scripts": {
    "dev": "env-cmd -f .env.dev ts-node-dev --watch .env.dev --require tsconfig-paths/register --transpile-only --respawn --inspect=4321 server.ts",
    "seed": "env-cmd -f .env.dev ts-node-dev --require tsconfig-paths/register --transpile-only Seed/MockData/importDataToDB.ts",
    "build:js": "rimraf build && tsc --noEmit false && tsc-alias && xcopy .env.dev build &&",
    "build:dev": "rimraf build && tsc && ncc build server.ts -o buildDev && xcopy .env.dev buildDev",
    "build:prod": "rimraf build && tsc && ncc build server.ts -o buildProd && xcopy .env.prod buildProd",
    "merge": "git pull origin main && git merge main",
    "lint": "npx tsc && npx prettier --write --cache --log-level silent . && npx cspell --cache --no-progress ./**/* && npx eslint --fix ."
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "env-cmd": "^10.1.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.4",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pug": "^3.0.2",
    "rimraf": "^5.0.5",
    "validator": "^13.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@cspell/dict-he": "^4.0.0",
    "@cspell/eslint-plugin": "^8.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.5",
    "@types/html-to-text": "^9.0.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/pug": "^2.0.10",
    "@types/sharp": "^0.31.1",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vercel/ncc": "^0.38.1",
    "cspell": "^8.0.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.0"
  }
}
